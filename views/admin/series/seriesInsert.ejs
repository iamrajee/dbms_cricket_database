    <style>
        #insertionForm{
            display: inline-block;
            padding: 10px;
        }
    
        input[type=text]{
            padding:7px 5px 7px 5px;
            border: 0;
            font-size:medium;
            border: 1px solid gray;
            border-radius: 4px;
        }
    
        input[type=submit]{
            margin-top: 10px;
            margin-bottom: 10px;
            padding: 8px;
            border:0;
            border: 1px solid rgb(13, 13, 201);
            border-radius: 2px;
            color: white;
            background-color: rgb(13, 13, 201);
        }

        #insertionForm select{
            padding:7px 5px 7px 5px;
            border: 0;
            font-size:medium;
            border: 1px solid gray;
            border-radius: 4px;
        }

        input[type=date]{
            padding:7px 5px 7px 5px;
            border: 0;
            font-size:medium;
            border: 1px solid gray;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div id = "insertionForm">
        <form action="" id = "seriesForm">
            Format: <br>
            <select name="format" id="format">
                <option value="T20">T20</option>
                <option value="ODI">ODI</option>
                <option value="Test">Test</option>
            </select> <br>
            Authority: <br>
            <select name="authority" id="authority">
                <% Authority.forEach(elem =>{ %>
                    <option value=<%= elem%> ><%= elem.authority%></option>
                <%})%>
            </select> <br>
            Series Type: <br>
            <select name="series_type" id="series_type">
                <% SeriesTypes.forEach(elem =>{%>
                    <option value=<%= elem%> ><%= elem.series_type%></option>
                <%})%>
            </select> <br>
            Starting Date: <br>
            <input type="date" id = "startingDate"> <br>
            Ending Date: <br>
            <input type="date" id = "endingDate"> <br>
            Series Name: <br>
            <input type="text" name = "series_name" placeholder="Enter" disabled>
            <br>
            <br>
            <input type="submit" value = "Submit">
        </form>
    </div>
</body>
</html>